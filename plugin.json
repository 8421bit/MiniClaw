{
    "name": "miniclaw",
    "version": "0.1.0",
    "mcpServers": {
        "miniclaw": {
            "command": "node",
            "args": [
                "${CLAUDE_PLUGIN_ROOT}/dist/index.js"
            ]
        }
    },
    "hooks": {
        "SessionStart": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/session-start.sh"
                    }
                ]
            }
        ]
    }
}